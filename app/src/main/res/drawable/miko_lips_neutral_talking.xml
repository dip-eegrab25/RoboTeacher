<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- Upper lip group -->
    <group
        android:name="upper_lip_group"
        android:translateX="20"
        android:translateY="40"
        android:pivotY="0"
        android:pivotX="100"
        android:scaleY="0.8999999999">

        <path
            android:name="upper_lip"
            android:pathData="M 0 40
                Q 40 10.5 80 15.5
                Q 120 10.5 160 40"
            android:fillColor="#c53030"
            android:strokeColor="#991b1b"
            android:strokeWidth="1"/>
    </group>

    <!-- Lower lip group -->
    <group
        android:name="lower_lip_group"
        android:translateX="20"
        android:translateY="40"
        android:scaleY="1">

        <path
            android:name="lower_lip"
            android:pathData="M 0 40
                Q 40 70.5 80 65.5
                Q 120 70.5 160 40"
            android:fillColor="#dc2626"
            android:strokeColor="#991b1b"
            android:strokeWidth="1"/>
    </group>

    <!-- Lip shine effect (static) -->

    <group android:translateX="40"
        android:translateY="75">

        <path
            android:name="lip_shine"
            android:pathData="M 0,0 C 40,-20 80,-20,120,0"
            android:strokeColor="#ffffff"
            android:strokeWidth="1"

            android:fillAlpha="0.3"/>

    </group>
</vector>
