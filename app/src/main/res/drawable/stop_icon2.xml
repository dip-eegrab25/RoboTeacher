<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="@dimen/mic_default_width"
        android:height="@dimen/mic_default_height">

        <shape android:shape="oval">


            <solid android:color="@android:color/holo_red_dark"/>

        </shape>
    </item>

    <item android:width="@dimen/mic_icon_default_width"
        android:height="@dimen/mic_icon_default_height"
        android:gravity="center">

        <shape android:shape="rectangle">

            <corners android:radius="@dimen/minute_curve"/>
            <solid android:color="@color/white"/>

        </shape>
    </item>

</layer-list>