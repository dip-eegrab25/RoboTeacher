            android:scaleY="0.96">

            <!-- Upper Lip -->
            <path
                android:pathData="M 20 40
              Q 60 35.5 100 30.5
              Q 140.5 35.5 180.5 40"
                android:fillColor="#c53030"
                android:strokeColor="#991b1b"
                android:strokeWidth="1"/>

        </group>

        <group android:name="lower_lip">

            <!-- Lower Lip -->
            <path
                android:pathData="M 20 40
              Q 60 50.5 100 60.5
              Q 140 50.5 180 40"
                android:fillColor="#dc2626"
                android:strokeColor="#991b1b"
                android:strokeWidth="1"/>
        </group>

