<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="@dimen/default_icon_margin"
            android:id="@+id/yellow_panda_menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/yellow_panda_menu"
            app:layout_constraintTop_toTopOf="@id/yellow_panda_menu"
            app:layout_constraintBottom_toBottomOf="@id/yellow_panda_menu"
            style="@style/defaultTextStyle"
            android:textColor="@color/text_color_chat"
            android:text="Yellow Panda"
            android:id="@+id/app_name_header"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/app_name_header"
            android:src="@drawable/drop_down_arrow"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintWidth_percent="0.03"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginEnd="@dimen/default_icon_margin"
            android:id="@+id/dropdown_arrow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello Learner! You're ready to go"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/app_name_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintVertical_bias="0.15"
            android:gravity="center"
            style="@style/defaultLargeTextStyle2"
            android:textSize="30sp"
            android:id="@+id/header_label"/>

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
