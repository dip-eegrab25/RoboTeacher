<!--            android:visibility="gone"-->
<!--            android:id="@+id/dropdown_arrow"/>-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lets read together!"
            android:textColor="@color/yellow_panda_logo_color"
            app:layout_constraintTop_toBottomOf="@id/header_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/header_label"
            app:layout_constraintEnd_toEndOf="@id/header_label"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintHorizontal_bias="0.45"
            android:gravity="start"
            style="@style/defaultMediumTextStyle"
            android:id="@+id/sub_header_label"/>

        <com.ai.roboteacher.ChatEditTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.80"
            app:layout_constraintDimensionRatio="1:0.17"
            app:layout_constraintVertical_bias="0.95"
            android:padding="@dimen/small_padding"
            android:background="@drawable/curved_background_chat"
            android:hint="@string/hint_chat_edittext"
            android:textColorHint="@color/text_color_chat"
            android:textSize="@dimen/small_text_size"
            android:gravity="start|top"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:inputType="textMultiLine"
            style="@style/defaultMediumTextStyle"
            android:id="@+id/chat_edit_text"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/sub_header_label"
            app:layout_constraintStart_toStartOf="@id/header_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toTopOf="@id/chat_edit_text"
            app:layout_constraintWidth_percent="0.75"
            android:layout_marginTop="@dimen/default_small_margin"
            android:layout_marginBottom="@dimen/default_small_margin"
            app:layout_constrainedHeight="true"
            android:id="@+id/chat_recycler"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/chat_recycler"
            app:layout_constraintStart_toEndOf="@id/chat_recycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/chat_recycler"
            android:orientation="vertical"
            android:src="@drawable/chat_start_stop_toggle"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/yellow_panda_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chat_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/back_layout"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:id="@+id/drawer_nav">

            <include layout="@layout/options_picker_view"/>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

