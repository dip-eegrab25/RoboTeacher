<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintWidth_percent="0.03"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="@dimen/default_icon_margin"
        android:id="@+id/yellow_panda_menu"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/yellow_panda_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/default_medium_margin"
        android:id="@+id/pdf_recycler"/>

</androidx.constraintlayout.widget.ConstraintLayout>