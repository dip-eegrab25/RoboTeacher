<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.30"
        app:layout_constraintDimensionRatio="1:0.42"
        app:layout_constraintHorizontal_bias="0.20"
        android:elevation="10dp"
        android:layout_marginTop="@dimen/item_margin"
        android:background="@drawable/text_selector"
        android:text="Class 1"
        android:padding="@dimen/default_padding"
        style="@style/defaultTextStyle"
        android:gravity="center"
        android:id="@+id/class_text"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/class_text"
        app:layout_constraintBottom_toBottomOf="@id/class_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/class_text"
        android:rotation="-10"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@color/holder_color"
        android:id="@+id/view"/>



